<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmoxStyler" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="font">@font/poppins_medium</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="TextColorLightBlack">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="TextColorGray">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="textColorTertiary">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="TintColor">
        <item name="android:tint">@color/light_black</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">#FEF5E0</item>
    </style>

    <style name="disableBgColor">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="Theme.SmoxStyler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="Theme.SmoxStyler">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.SmoxStyler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmoxStyler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FirebasePhoneAuth" parent="FirebaseUI">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorButtonNormal">@color/teal_200</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:buttonStyle">@style/FirebasePhoneAuth.Button</item>
    </style>
    <style name="FirebasePhoneAuth.Button" parent="FirebaseUI.Button">

    </style>

    <style name="themeOnverlay_timePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/light_yellow</item>
        <item name="colorAccent">@color/light_black</item>
        <item name="android:textColorPrimary">@color/light_black</item>
        <item name="android:textColorSecondary">@color/light_black</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#3A3A3A</item>
        <!-- Used for the background -->
    </style>


    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/light_yellow</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CTSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/black</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/light_gray</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorHover</item>
    </style>



</resources>