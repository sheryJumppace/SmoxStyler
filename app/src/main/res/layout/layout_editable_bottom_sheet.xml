<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_icon_arrow_back" />

        <TextView
            android:id="@+id/txtTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/searchBar"
            android:layout_toEndOf="@+id/imgBack"
            android:gravity="center"
            android:padding="4dp"
            android:text="Add Holiday"
            android:textColor="#141516"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/searchBar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:background="@drawable/bg_date_slot"
        android:gravity="start|center_vertical"
        android:drawablePadding="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"
        android:maxLines="1"
        android:textSize="@dimen/_13ssp"
        android:hint="Select Date"
        android:textColorHint="@color/white"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_b_calendar_image" />


    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:hint="@string/holidays_name"
        android:background="@drawable/rect_border"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_border_yellow"
        android:text="Save Holiday"
        android:layout_margin="@dimen/_8sdp"/>

</androidx.appcompat.widget.LinearLayoutCompat>