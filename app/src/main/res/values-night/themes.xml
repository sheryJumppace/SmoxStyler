<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmoxStyler" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212426</item>
        <item name="colorPrimaryVariant">#212426</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#212426</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="font">@font/poppins_medium</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="TintColor">
        <item name="android:tint">@color/light_white</item>
    </style>
    <style name="BackgroundColor">
        <item name="android:background">#292929</item>
    </style>
    <style name="disableBgColor">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="TextColorLightBlack">
        <item name="android:textColor">@color/light_white</item>
    </style>
    <style name="TextColorGray">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="FirebasePhoneAuth" parent="FirebaseUI">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorButtonNormal">@color/teal_200</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:buttonStyle">@style/FirebasePhoneAuth.Button</item>
    </style>
    <style name="FirebasePhoneAuth.Button" parent="FirebaseUI.Button">

    </style>

    <style name="FullScreen" parent="Theme.SmoxStyler">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#3A3A3A</item>
        <!-- Used for the background -->
    </style>

</resources>